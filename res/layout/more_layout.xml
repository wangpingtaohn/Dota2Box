<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical" >

    <include
        android:id="@+id/more_main_include_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/include_top_bar" />

    <RelativeLayout
        android:id="@+id/more_listview_item_clear_cache_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_main_include_layout"
        android:layout_marginTop="20dp"
        android:background="@drawable/item_background"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/more_listview_item_clear_cache_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/more_clear" />

        <TextView
            android:id="@+id/more_listview_item_clear_cache_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/more_listview_item_clear_cache_img"
            android:text="清除缓存"
            android:textColor="@color/dark_gray"
            android:textSize="22sp" />
        <!-- <TextView
            android:id="@+id/more_listview_item_clear_cache_size_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/more_listview_item_clear_cache_text"
            android:textColor="@color/green"
            android:textSize="18sp" /> -->
    </RelativeLayout>

    <View
        android:id="@+id/more_listview_item_cache_layout_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_listview_item_clear_cache_layout"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/more_listview_item_feedback_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_listview_item_cache_layout_line"
        android:background="@drawable/item_background"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/more_listview_item_feedback_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/more_proposal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/more_listview_item_feedback_img"
            android:text="意见反馈"
            android:textColor="@color/dark_gray"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text=">"
            android:textColor="@color/dark_gray"
            android:textSize="24sp" />
    </RelativeLayout>

    <View
        android:id="@+id/more_listview_item_feedback_layout_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_listview_item_feedback_layout"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/more_listview_item_update_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_listview_item_feedback_layout_line"
        android:background="@drawable/item_background"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/more_listview_item_update_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/more_update" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/more_listview_item_update_img"
            android:text="检查更新"
            android:textColor="@color/dark_gray"
            android:textSize="22sp" />
    </RelativeLayout>

    <View
        android:id="@+id/more_listview_item_update_layout_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/more_listview_item_update_layout"
        android:background="@color/light_gray" />

    <RelativeLayout
        android:id="@+id/more_listview_item_about_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/more_listview_item_update_layout_line"
        android:background="@drawable/item_background"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/more_listview_item_about_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/more_help" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/more_listview_item_about_img"
            android:text="关于"
            android:textColor="@color/dark_gray"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:text=">"
            android:textColor="@color/dark_gray"
            android:textSize="24sp" />
    </RelativeLayout>

</RelativeLayout>