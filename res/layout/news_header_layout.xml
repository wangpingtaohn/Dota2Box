<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_top_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <TextView
                android:id="@+id/news_chat_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="今日开黑运势:"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/news_chat_star_img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/news_chat_text"
                android:src="@drawable/star_1" />

            <ImageView
                android:id="@+id/news_chat_star_img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/news_chat_star_img1"
                android:src="@drawable/star_1" />

            <ImageView
                android:id="@+id/news_chat_star_img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/news_chat_star_img2"
                android:src="@drawable/star_1" />

            <ImageView
                android:id="@+id/news_chat_star_img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/news_chat_star_img3"
                android:src="@drawable/star_1" />

            <ImageView
                android:id="@+id/news_chat_star_img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/news_chat_star_img4"
                android:src="@drawable/star_1" />

            <ImageView
                android:id="@+id/news_hero_avatar_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:layout_marginRight="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/news_hero_avatar_img"
                android:text="幸运英雄:"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/input_background"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/search_user_et"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:text="输入昵称或ID搜索"
                android:textColor="@color/gray"
                android:textSize="14sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/gray" />

            <LinearLayout
                android:id="@+id/news_search_layout"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/news_search_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:src="@drawable/btn_search_click_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="搜索"
                    android:textColor="@color/gray"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="提示:在游戏设置中公开数据才能搜索到玩家"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_number" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="目前游戏在线人数:"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/news_online_counter_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="125410"
            android:textColor="@color/orance"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/news_rank_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:background="@color/green"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="世界排行榜"
        android:textColor="@drawable/color_white_black_click"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/news_sales_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/news_price_top_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_price" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/news_price_top_img"
                android:text="今日特价"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_price_layout_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_price_top_img"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_price_layout_price_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_price_layout_name"
                android:layout_marginLeft="15dp"
                android:text="价格:"
                android:textColor="@color/gray"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_price_layout_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/news_price_layout_name"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/news_price_layout_price_text"
                android:textColor="@color/orance"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/news_price_layout_time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/time_bg_1"
                android:gravity="center"
                android:text="0"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/news_price_layout_time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/news_price_layout_time1"
                android:background="@drawable/time_bg_1"
                android:gravity="center"
                android:text="0"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/news_price_layout_time1_line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@id/news_price_layout_time2"
                android:src="@drawable/time_bg2" />
            <TextView
                android:id="@+id/news_price_layout_time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/news_price_layout_time1_line"
                android:background="@drawable/time_bg_1"
                android:gravity="center"
                android:text="0"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/news_price_layout_time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/news_price_layout_time3"
                android:background="@drawable/time_bg_1"
                android:gravity="center"
                android:text="0"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/news_price_layout_time1_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="2dp"
                android:layout_marginBottom="2dp"
                android:maxLength="1"
                android:layout_toRightOf="@id/news_price_layout_time4"
                android:src="@drawable/time_bg2" />
            <TextView
                android:id="@+id/news_price_layout_time5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/news_price_layout_time1_line2"
                android:background="@drawable/time_bg_1"
                android:gravity="center"
                android:text="0"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp" />
            <TextView
                android:id="@+id/news_price_layout_time6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@id/news_price_layout_time5"
                android:background="@drawable/time_bg_1"
                android:gravity="center"
                android:text="0"
                android:maxLength="1"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/news_price_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/news_price_layout_per"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/news_price_layout_per_bg"
                android:gravity="center"
                android:text="暂无"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/news_wallpaper_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_pic" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/news_wallpaper_img"
            android:text="刀塔壁纸"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_marginTop="3dp"
            android:id="@+id/news_wallpaper_more_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="更多  >"
            android:textColor="@drawable/color_green_gray_click"
            android:textSize="18sp" />

        <GridView
            android:id="@+id/news_wallpaper_img_gridview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fadingEdge="none"
            android:fadingEdgeLength="0dip"
            android:gravity="fill_vertical|fill_horizontal"
            android:horizontalSpacing="10dip"
            android:numColumns="3"
            android:padding="10dp"
            android:layout_below="@id/news_wallpaper_img"
            android:stretchMode="columnWidth"
            android:verticalSpacing="10dp" />
    </RelativeLayout>

</LinearLayout>