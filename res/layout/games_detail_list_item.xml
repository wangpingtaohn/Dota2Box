<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hero_detail_basic_info_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:background="@drawable/item_background" >

    <ImageView
        android:id="@+id/games_list_detail_item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp" />

    <ProgressBar
        android:id="@+id/games_list_detail_item_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/games_list_detail_item_image" >

        <RelativeLayout
            android:id="@+id/games_list_detail_item_first_layotu"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/games_list_detail_item_image" >

            <TextView
                android:id="@+id/games_list_detail_item_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:maxEms="8"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/games_list_detail_item_name_image"
                android:layout_width="32dp"
                android:layout_height="28dp"
                android:layout_below="@id/games_list_detail_item_name_text" />

            <TextView
                android:id="@+id/games_list_detail_item_nickname_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/games_list_detail_item_name_image"
                android:layout_below="@id/games_list_detail_item_name_text"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/games_list_detail_item_name_image"
                android:gravity="center"
                android:text="nickname"
                android:textColor="@color/green"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/games_list_detail_item_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/games_list_detail_item_first_layotu"
            android:layout_marginRight="10dp" >

            <TextView
                android:id="@+id/games_list_detail_item_level_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="41"
                android:layout_alignParentLeft="true"
                android:textColor="@color/gray"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/games_list_detail_item_money_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:layout_toLeftOf="@+id/games_list_detail_item_kda_text"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="18k"
                android:textColor="@color/drak_yellow"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/games_list_detail_item_kda_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="8/0/9"
                android:textColor="@color/pink_red"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/games_list_detail_item_zb_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignRight="@id/games_list_detail_item_kda_text"
                android:layout_below="@id/games_list_detail_item_kda_text"
                android:orientation="horizontal"
                 >

                <ImageView
                    android:id="@+id/games_list_detail_item_zb_img1"
                    android:layout_width="32dp"
                    android:layout_height="28dp" />

                <ImageView
                    android:id="@+id/games_list_detail_item_zb_img2"
                    android:layout_width="32dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:id="@+id/games_list_detail_item_zb_img3"
                    android:layout_width="32dp"
                    android:layout_height="28dp" />

                <ImageView
                    android:id="@+id/games_list_detail_item_zb_img4"
                    android:layout_width="32dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp" />

                <ImageView
                    android:id="@+id/games_list_detail_item_zb_img5"
                    android:layout_width="32dp"
                    android:layout_height="28dp" />

                <ImageView
                    android:id="@+id/games_list_detail_item_zb_img6"
                    android:layout_width="32dp"
                    android:layout_height="28dp"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>