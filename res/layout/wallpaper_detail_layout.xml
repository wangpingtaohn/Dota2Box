<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/include_top_bar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <android.support.v4.view.ViewPager
            android:id="@+id/download_image_viewpaper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center" />

        <FrameLayout
            android:id="@+id/download_wallpaper_detail_loading_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom" >

            <ImageView
                android:id="@+id/down_pager_itemt_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="10dp"
                android:background="@drawable/btn_download_click_bg"
                android:padding="10dp" />

            <TextView
                android:id="@+id/down_pager_itemt_page_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:padding="10dp"
                android:textColor="@color/green"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/down_pager_itemt_page_set_wallpaper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="设为壁纸"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:background="@color/green"
                android:textColor="@drawable/color_white_black_click"
                android:textSize="16sp" />
        </FrameLayout>
    </FrameLayout>

</LinearLayout>