<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <ImageView
        android:id="@+id/hero_list_item_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/abaddon" />

    <ProgressBar
        android:id="@+id/hero_list_item_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="false"
        android:layout_centerVertical="true"
        android:layout_margin="10dp" />

    <RelativeLayout
        android:id="@+id/hero_list_item_total_layout"
        android:layout_width="90dp"
        android:layout_height="24dp"
        android:layout_centerInParent="true"
        android:background="@color/gray" >

        <TextView
            android:id="@+id/hero_list_item_loss_text"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/hero_list_item_win_text"
            android:layout_width="1dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:background="@color/orance" />

        <TextView
            android:id="@+id/hero_list_item_total_text"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/hero_list_item_count_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/hero_list_item_total_layout"
        android:textColor="@color/orance"
        android:textSize="16sp" />

    <TextView
        android:layout_marginRight="10dp"
        android:id="@+id/hero_list_item_kda_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/gray"
        android:textSize="16sp" />

</RelativeLayout>